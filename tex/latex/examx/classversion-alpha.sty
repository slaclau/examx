\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{classversion-alpha}[2022/02/03 Used for 
versioning classes]
\RequirePackage{xparse}
\RequirePackage{readprov}

\newcounter{classversion@releaseRevision}
\setcounter{classversion@releaseRevision}{0}

\def\classversion@releases{}

\NewDocumentCommand{\NewRelease}{m}{
    \addtocounter{classversion@releaseRevision}{1}
    \gdef\classversion@currentRelease{#1}
    \xdef\classversion@release{\classversion@release,#1}
    \classversion@releases
}
